@model ExParcial.Models.Curso

@{
    ViewData["Title"] = "Crear Curso";
}

<h2 class="mb-4">Crear Curso</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Creditos" class="form-label"></label>
                    <input asp-for="Creditos" class="form-control" />
                    <span asp-validation-for="Creditos" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="CupoMaximo" class="form-label"></label>
                    <input asp-for="CupoMaximo" class="form-control" />
                    <span asp-validation-for="CupoMaximo" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Activo</label>
                    <div class="form-check">
                        <input asp-for="Activo" class="form-check-input" />
                        <label asp-for="Activo" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <label asp-for="HorarioInicio" class="form-label"></label>
                    <input asp-for="HorarioInicio" type="time" class="form-control" />
                    <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="HorarioFin" class="form-label"></label>
                    <input asp-for="HorarioFin" type="time" class="form-control" />
                    <span asp-validation-for="HorarioFin" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
