@model ExParcial.Models.CoordinadorMatriculasViewModel

@{
    ViewData["Title"] = "Matrículas del Curso";
}

<h2 class="mb-4">Matrículas — @Model.Curso.Nombre (@Model.Curso.Codigo)</h2>

<p>
    <a asp-action="Index" asp-controller="Coordinador" class="btn btn-secondary">Volver a Cursos</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Alumno</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th style="width:220px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Matriculas != null && Model.Matriculas.Any())
        {
            foreach (var m in Model.Matriculas)
            {
                <tr>
                    <td>
                        @if (Model.Usernames != null && !string.IsNullOrEmpty(m.UsuarioId) && Model.Usernames.TryGetValue(m.UsuarioId, out var uname) && !string.IsNullOrEmpty(uname))
                        {
                            @uname
                        }
                        else
                        {
                            @m.UsuarioId
                        }
                    </td>
                    <td>
                        @switch (m.Estado)
                        {
                            case ExParcial.Models.EstadoMatricula.Pendiente:
                                <span class="badge bg-warning text-dark">Pendiente</span>;
                                break;
                            case ExParcial.Models.EstadoMatricula.Confirmada:
                                <span class="badge bg-success">Confirmada</span>;
                                break;
                            case ExParcial.Models.EstadoMatricula.Cancelada:
                                <span class="badge bg-danger">Cancelada</span>;
                                break;
                        }
                    </td>
                    <td>
                        @if (m.FechaRegistro != default)
                        {
                            @m.FechaRegistro.ToLocalTime().ToString("g")
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                    <td>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Coordinador") && m.Estado == ExParcial.Models.EstadoMatricula.Pendiente)
                        {
                            <form asp-action="ConfirmarMatricula" asp-controller="Coordinador" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="matriculaId" value="@m.Id" />
                                <button type="submit" class="btn btn-sm btn-success me-1">Confirmar</button>
                            </form>

                            <form asp-action="CancelarMatricula" asp-controller="Coordinador" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="matriculaId" value="@m.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Sin acciones</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No hay matrículas para este curso.</td>
            </tr>
        }
    </tbody>
</table>
